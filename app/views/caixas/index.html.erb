<p id="notice"><%= notice %></p>

<h1>Caixas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @caixas.each do |caixa| %>
      <tr>
        <td><%= link_to 'Show', caixa %></td>
        <td><%= link_to 'Edit', edit_caixa_path(caixa) %></td>
        <td>
		
		 <div class="card-body">
        <h4 class="card-title"><%= caixa.id %></h4>
        <p class="card-text"><%= caixa.id %></p>
      </div>

      <div class="card-footer">
        <!-- Delete Button showing the modal -->
        <button type="button" class="btn btn-outline-danger" 
             data-toggle="modal" data-target="#exampleModal">
          Delete
        </button>
      </div>
		
		<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">

            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Delete Confirmation</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
              </button>
            </div>

            <div class="modal-body">
              Are you sure?
            </div>

            <!-- Delete button in the footer -->
            <div class="modal-footer">
              <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
              <%= link_to 'Delete', caixa, method: :delete, class: 'btn btn-outline-danger' %>
            </div>

        </div>
		
		
		</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Caixa', new_caixa_path %>
