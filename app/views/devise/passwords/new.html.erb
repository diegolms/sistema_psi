<body class="bg-dark">


    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
               				<div class="login-logo">
                    <a href="#">
                        <p>Jesus do Porto V</p>
                    </a>
                </div>
				
				<% if resource.errors.any? %>
					<div class="sufee-alert alert with-close alert-danger alert-dismissible fade show" role="alert">
							<span class="badge badge-pill badge-danger">Erro</span>
								  <% resource.errors.full_messages.each do |message| %>
									<%= message %>
								  <% end %>
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
					</div>				
				<% end %>

                <div class="login-form">
                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
					<%= render "devise/shared/error_messages", resource: resource %>
                        <div class="form-group">
                            <label>Email</label>
							<%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", required: true %>
                        </div>
							<%= f.submit "Envie-me instruções de recuperação de senha.", class:"btn btn-primary btn-flat m-b-15"  %>
								<div class="register-link m-t-15 text-center">
									<br>
                                        <p>Já possui conta?  <%= link_to "Log in", new_session_path(resource_name) %></p>
                                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</body>