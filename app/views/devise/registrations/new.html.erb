<body class="bg-dark">


    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
				<div class="login-logo">
                    <a href="#">
                        <p>Jesus do Porto V</p>
                    </a>
                </div>
				
				<% if !devise_error_messages!.empty? %>
						<div class="sufee-alert alert with-close alert-danger alert-dismissible fade show" role="alert">
							<span class="badge badge-pill badge-danger">Erro</span>
								 <%= devise_error_messages! %>
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>	
					<% end %>
				
                <div class="login-form">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <div class="form-group">
                            <label>Email</label>
							<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
                        </div>
						<div class="form-group">
                            <label>Usuário</label>
							<%= f.text_field :username , autofocus: true, autocomplete: "email", class: "form-control", required: true %>
                        </div>
						
                            <div class="form-group">
                                <label>Senha</label>
								<%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
                        </div>
                                <div class="form-group">
                                    <label>Confirmação da Senha</label>
                                   <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
                        </div>
                               
									<%= f.submit "Cadastrar", class:"btn btn-primary btn-flat m-b-30 m-t-30"  %>
                                    <div class="register-link m-t-15 text-center">
									<br>
                                        <p>Já possui conta?  <%= link_to "Log in", new_session_path(resource_name) %></p>
                                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>

</body>